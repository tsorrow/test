<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tsorrow.junior.group">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".TabButtonActivity" />
        <activity android:name=".TabHostActivity" />
        <activity android:name=".TabGroupActivity" />
        <activity android:name=".TabFragmentActivity" />
        <activity android:name=".TabFirstActivity" />
        <activity android:name=".TabSecondActivity" />
        <activity android:name=".TabThirdActivity" />
        <activity
            android:name=".ToolbarActivity"
            android:theme="@style/AppCompatTheme" />
        <activity
            android:name=".OverflowMenuActivity"
            android:theme="@style/AppCompatTheme" />
        <activity
            android:name=".SearchViewActivity"
            android:theme="@style/AppCompatTheme" />
        <activity
            android:name=".ToolbarCustomActivity"
            android:theme="@style/AppCompatTheme" />
        <activity
            android:name=".TabLayoutActivity"
            android:theme="@style/AppCompatTheme" />
        <activity
            android:name=".TabCustomActivity"
            android:theme="@style/AppCompatTheme" />
        <activity
            android:name=".SearchResultActivity"
            android:theme="@style/AppCompatTheme">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity android:name=".BannerIndicatorActivity" />
        <activity android:name=".BannerPagerActivity" />
        <activity android:name=".RecyclerLinearActivity" />
        <activity android:name=".RecyclerGridActivity" />
        <activity android:name=".RecyclerCombineActivity" />
        <activity android:name=".RecyclerStaggeredActivity" />
        <activity android:name=".RecyclerDynamicActivity" />
        <activity android:name=".SwipeRefreshActivity" />
        <activity android:name=".SwipeRecyclerActivity" />
        <activity android:name=".DepartmentStoreActivity"></activity>
    </application>

</manifest>